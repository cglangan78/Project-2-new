<div class="jumbotron">
  <h1>  <img class="avatarsize" src="<%= @user.avatar %>"> <%= @user.username %></h1><br>
  <p><%= @user.email %> </p>
  <p2><%= @user.bio %> </p2>
</div>

<% @user.pictures.each_with_index do |u, i| %>
  <% if (i + 1) % 3 == 1 %>
    <div class="row">
  <%end%>

  <div class="col-md-4">
    <div class ="thumbnail">
      <% if u.url != "" %>
        <a href="/pictures/<%=u.id%>"><img class = "tinysize" href=""src="<%= u.url %>" alt="<%= u.location %>" /></a>
      <%else%>
        <a href="/pictures/<%=u.id%>"><%= image_tag((u.image(:large)), :class => "tinysize") %></a>
      <%end%>

      <div class="caption">
          <h3> <%= u.location %> </h3><br><br>
      </div>
   </div>
  </div>
  <% if (i + 1) % 3 == 0 %>
    </div>
  <% end %>
<% end %>
