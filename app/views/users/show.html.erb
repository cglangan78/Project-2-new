<div class="jumbotron">
  <h1>  <img class="avatarsize" src="<%= @user.avatar %>"> <%= @user.username %></h1><br>
  <p><%= @user.email %> </p>
  <p2><%= @user.bio %> </p2>
</div>

<div class = "box">
  <% @user.pictures.each do |p| %>
    <% if p.url != "" %>
      <a href="/pictures/<%=p.id%>"><img class = "fullsize" href=""src="<%= p.url %>" alt="<%= p.location %>" /></a>
    <%else%>
      <a href="/pictures/<%=p.id%>"><%= image_tag((p.image(:large)), :class => "fullsize") %></a>
    <%end%>
  <div class="caption">
      <h3> <%= p.location %> </h3><br><br>
    <%end%>
  </div>
</div>
