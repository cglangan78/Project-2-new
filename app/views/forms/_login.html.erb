
<div class="container">
  <div class="row">
    <div class="col-md-offset-5 col-md-3 box">
      <div class="form-login">
        <h1>Welcome Back!</h1>
          <%= form_tag sessions_path do %>
            <div class="field">
              <%= text_field_tag :email, nil, placeholder: "email", class: "form-control input-sm chat-input" %>
            </div><br>
            <div class="field">
              <%= password_field_tag :password, nil, placeholder: "password", class: "form-control input-sm chat-input" %>
            </div><br>
              <div class="wrapper">
                <span class="group-btn"> <%= submit_tag "Login", class:"btn btn-primary btn-md" %>
                  <i class="fa fa-sign-in"></i>
                </span>
                  <span class="group-btn"> <%= link_to 'Sign Up', new_user_path, class:"btn btn-primary btn-md" %>
                    <i class="fa fa-sign-in"></i>
                  </span>
              </div>
          <% end %>
      </div>

    </div>
  </div>
</div>
